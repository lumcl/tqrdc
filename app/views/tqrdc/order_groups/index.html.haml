%h3= t('attributes.tqrdc_order_group')

%h5
  = link_to t('new_tqrdc_order_group'), new_tqrdc_order_group_path

= form_tag(tqrdc_order_groups_url, method: 'get', class: 'form-inline') do
  = text_field_tag :name, nil, placeholder: t('attributes.name'), class: 'form-control input-sm', value: params[:name]
  = button_tag class: 'btn btn-success btn-form-submit', type: 'button' do
    %span.glyphicon.glyphicon-search

.table-responsive
  %table.table.table-hover.table-condensed.table-bordered
    %thead
      %tr
        %th= t('action')

        %th= t('attributes.id')

        %th= t('attributes.order_id')

        %th= t('attributes.group_id')

        %th= t('attributes.status')

        %th= t('attributes.total')

    %tbody
      - @tqrdc_order_groups.each do |tqrdc_order_group|
        %tr
          %td
            = link_to t('edit'), edit_tqrdc_order_group_path(tqrdc_order_group)
            |
            = link_to t('delete'), tqrdc_order_group, :method => :delete, :data => { :confirm => t('confirm_delete')}


          %td= tqrdc_order_group.id

          %td= tqrdc_order_group.order_id

          %td= tqrdc_order_group.group_id

          %td= tqrdc_order_group.status

          %td= tqrdc_order_group.total


%h5
  = link_to t('new_tqrdc_order_group'), new_tqrdc_order_group_path

= paginate @tqrdc_order_groups unless @tqrdc_order_groups.empty?