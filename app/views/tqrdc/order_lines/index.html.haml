%h3= t('attributes.tqrdc_order_line')

%h5
  = link_to t('new_tqrdc_order_line'), new_tqrdc_order_line_path

= form_tag(tqrdc_order_lines_url, method: 'get', class: 'form-inline') do
  = text_field_tag :name, nil, placeholder: t('attributes.name'), class: 'form-control input-sm', value: params[:name]
  = button_tag class: 'btn btn-success btn-form-submit', type: 'button' do
    %span.glyphicon.glyphicon-search

.table-responsive
  %table.table.table-hover.table-condensed.table-bordered
    %thead
      %tr
        %th= t('action')

        %th= t('attributes.id')

        %th= t('attributes.order_id')

        %th= t('attributes.order_group_id')

        %th= t('attributes.status')

        %th= t('attributes.qhead_id')

        %th= t('attributes.final_score')

        %th= t('attributes.u1_score')

