        %th= t('attributes.u2_comment')

        %th= t('attributes.u2_sign_date')

        %th= t('attributes.u2_ip')

        %th= t('attributes.u2_role')

        %th= t('attributes.u2_qline_id')

        %th= t('attributes.u3_score')

        %th= t('attributes.u3_user_id')

        %th= t('attributes.u3_comment')

        %th= t('attributes.u3_sign_date')

        %th= t('attributes.u3_ip')

        %th= t('attributes.u3_role')

        %th= t('attributes.u3_qline_id')

        %th= t('attributes.u4_score')

        %th= t('attributes.u4_user_id')

        %th= t('attributes.u4_comment')

        %th= t('attributes.u4_sign_date')

        %th= t('attributes.u4_ip')

        %th= t('attributes.u4_role')

        %th= t('attributes.u4_qline_id')

    %tbody
      - @tqrdc_order_lines.each do |tqrdc_order_line|
        %tr
          %td
            = link_to t('edit'), edit_tqrdc_order_line_path(tqrdc_order_line)
            |
            = link_to t('delete'), tqrdc_order_line, :method => :delete, :data => { :confirm => t('confirm_delete')}


          %td= tqrdc_order_line.id

          %td= tqrdc_order_line.order_id

          %td= tqrdc_order_line.order_group_id

          %td= tqrdc_order_line.status

          %td= tqrdc_order_line.qhead_id

          %td= tqrdc_order_line.final_score

          %td= tqrdc_order_line.u1_score

          %td= tqrdc_order_line.u1_user_id

          %td= tqrdc_order_line.u1_comment

          %td= tqrdc_order_line.u1_sign_date

          %td= tqrdc_order_line.u1_ip

          %td= tqrdc_order_line.u1_role

          %td= tqrdc_order_line.u1_qline_id

          %td= tqrdc_order_line.u2_score

